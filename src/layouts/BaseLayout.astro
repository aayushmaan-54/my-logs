---
import '@fontsource/source-serif-4/400';
import '@fontsource/source-serif-4/400-italic';
import '@fontsource/source-serif-4/600';
import '@fontsource/source-serif-4/700';

import '@fontsource/jetbrains-mono/400';
import '@fontsource/jetbrains-mono/500';
import '@fontsource/jetbrains-mono/600';

import '@/styles/global.css';

import Footer from '@/components/Footer.astro';
import Databuddy from '@/components/Databuddy.astro';
import Header from '@/components/Header.astro';
import Nav from '@/components/Nav.astro';
import { SITE } from '@/site.config';
import {
  PUBLIC_GOOGLE_SITE_VERIFICATION,
  DATABUDDY_CLIENT_ID,
} from 'astro:env/client';
import { ClientRouter } from 'astro:transitions';

export interface Props {
  title?: string;
  author?: string;
  profile?: string;
  description?: string;
  ogImage?: string;
  canonicalURL?: string;
  pubDatetime?: Date;
  modDatetime?: Date | null;
  scrollSmooth?: boolean;
  showNav?: boolean;
  section?: 'blogs' | 'short-reads' | string;
  isDraft?: boolean;
}

const {
  title = SITE.title,
  author = SITE.author,
  profile = SITE.profile,
  description = SITE.description,
  ogImage = SITE.ogImage ? `/${SITE.ogImage}` : '/og-image.png',
  canonicalURL = new URL(Astro.url.pathname, Astro.url),
  pubDatetime,
  modDatetime,
  scrollSmooth = true,
  showNav = true,
  section,
  isDraft = false,
} = Astro.props;

const pageTitle = section
  ? `logs / ${section} / ${title?.toLowerCase()}`
  : `logs / ${title?.toLowerCase()}`;

const socialImageURL = new URL(ogImage, Astro.url);

const sanitizeForJson = (str: string | undefined): string => {
  if (!str) return '';
  return str
    .replace(/[<>]/g, '')
    .replace(/[\u0000-\u001F\u007F]/g, '')
    .trim();
};

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'BlogPosting',
  headline: sanitizeForJson(title),
  image: socialImageURL.href,
  datePublished: pubDatetime?.toISOString() ?? '',
  ...(modDatetime && { dateModified: modDatetime.toISOString() }),
  author: [
    {
      '@type': 'Person',
      name: sanitizeForJson(author),
      ...(profile && { url: profile }),
    },
  ],
};

const shouldNoIndex = isDraft && import.meta.env.DEV;
---

<!doctype html>
<html
  dir={SITE.dir}
  lang={SITE.lang ?? 'en'}
  class={`${scrollSmooth && 'scroll-smooth'}`}
>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/light-logo.svg' id='favicon' />

    {shouldNoIndex && <meta name='robots' content='noindex, nofollow' />}

    <script
      is:inline
      define:vars={{ THEME_STORAGE_KEY: SITE.browserStorage.theme }}
    >
      const theme =
        localStorage.getItem(THEME_STORAGE_KEY) ||
        (window.matchMedia('(prefers-color-scheme: dark)').matches
          ? 'dark'
          : 'light');

      const isDark = theme === 'dark';
      document.documentElement.classList.toggle('dark', isDark);

      const favicon = document.querySelector('link[rel="icon"]');
      if (favicon) {
        favicon.href = isDark ? '/light-logo.svg' : '/dark-logo.svg';
      }
    </script>

    <script>
      import '@/scripts/track-back-url';
      import '@/scripts/toggle-theme';
    </script>
    <link rel='canonical' href={canonicalURL} />

    <!-- General Meta Tags -->
    <title>{pageTitle}</title>
    <meta name='title' content={title} />
    <meta name='description' content={description} />
    <meta name='author' content={author} />
    <link rel='sitemap' href='/sitemap-index.xml' />

    <!-- Open Graph / Facebook -->
    <meta property='og:type' content='article' />
    <meta property='og:title' content={title} />
    <meta property='og:description' content={description} />
    <meta property='og:url' content={canonicalURL} />
    <meta property='og:image' content={socialImageURL} />

    <!-- Article Author URL in Open Graph -->
    {profile && <meta property='article:author' content={profile} />}

    <!-- Databuddy Analytics -->
    <Databuddy websiteId={DATABUDDY_CLIENT_ID} />

    <!-- Article Published/Modified time -->
    {
      pubDatetime && (
        <meta
          property='article:published_time'
          content={pubDatetime.toISOString()}
        />
      )
    }
    {
      modDatetime && (
        <meta
          property='article:modified_time'
          content={modDatetime.toISOString()}
        />
      )
    }

    <!-- Twitter -->
    <meta property='twitter:card' content='summary_large_image' />
    <meta property='twitter:url' content={canonicalURL} />
    <meta property='twitter:title' content={title} />
    <meta property='twitter:description' content={description} />
    <meta property='twitter:image' content={socialImageURL} />
    <!-- Twitter @creator handle -->
    {
      SITE.twitterHandle && (
        <meta name='twitter:creator' content={SITE.twitterHandle} />
      )
    }
    {
      SITE.twitterHandle && (
        <meta name='twitter:site' content={SITE.twitterHandle} />
      )
    }

    <!-- Google JSON-LD Structured data (sanitized) -->
    <script
      type='application/ld+json'
      is:inline
      set:html={JSON.stringify(structuredData)}
    />

    <!-- Enable RSS feed auto-discovery (https://docs.astro.build/en/recipes/rss/#enabling-rss-feed-auto-discovery)  -->
    <link
      rel='alternate'
      type='application/rss+xml'
      title={SITE.title}
      href={new URL('rss.xml', Astro.site)}
    />

    <meta name='theme-color' content='#ffffff' class='theme-meta' />

    <!-- Google Site Verification -->
    {
      PUBLIC_GOOGLE_SITE_VERIFICATION && (
        <meta
          name='google-site-verification'
          content={PUBLIC_GOOGLE_SITE_VERIFICATION}
        />
      )
    }

    <ClientRouter />
  </head>
  <body class='flex min-h-screen flex-col'>
    <div class='mx-auto w-full max-w-app px-4'>
      <Header />
      {showNav && <Nav />}
    </div>

    <div class='mx-auto w-full max-w-app flex-1 px-4'>
      <slot />
    </div>

    <aside class='mx-auto w-full max-w-app px-4'>
      <Footer />
    </aside>
  </body>
</html>
