---
export interface Props {
  id?: string;
  href: string;
  class?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
}

const {
  id,
  href,
  class: className = '',
  ariaLabel,
  title,
  disabled = false,
} = Astro.props;
---

{
  disabled ? (
    <span
      id={id}
      class:list={['group', className]}
      title={title}
      aria-disabled={disabled}
    >
      <slot />
    </span>
  ) : (
    <a
      id={id}
      {href}
      class:list={[
        'group text-foreground-primary/75 transition-colors hover:text-foreground-primary',
        className,
      ]}
      aria-label={ariaLabel}
      title={title}
    >
      <slot />
    </a>
  )
}
